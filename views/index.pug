extends layout

block content
	nav.navbar.navbar-default
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#')=partnerName
			
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right
					li#login-btn
						a(class='clickable' onclick='window.sso.login({ partnerKey: "' + partnerKey + '", continue: "' + domain + '", redirect_uri: "' + domain + '" })') Login
					li#register-btn
						a(class='clickable' onclick='window.sso.register({ partnerKey: "' + partnerKey + '", redirect_uri: "' + domain + '" })') Register
					li#user-detail.dropdown.hide
						a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
							span#user-greeting
							span.caret
						ul.dropdown-menu
							li
								a(class='clickable' onclick='window.sso.logout({ partnerKey: "' + partnerKey + '", continue: "' + domain + '" })') Logout
	
	script(type='text/javascript', src='/javascripts/partner.js')